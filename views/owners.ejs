<!-- owners.ejs -->

<div class="container mt-3">
    <div class="row">
        <div class="col-md-8">
            <h2>Owners</h2>
            
                <a href="/add-owner" class="btn btn-primary">Tambah Data</a>
            
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">No</th>
                        <th scope="col">Nama</th>
                        <th scope="col">Alamat</th>
                        <th scope="col">No HP</th>
                        <th scope="col">Email</th>
                        <th scope="col">Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    <% ownersData.forEach(function(owner, index) { %>
                        <tr>
                            <th scope="row"><%= index + 1 %></th>
                            <td><%= owner.nama %></td>
                            <td><%= owner.alamat %></td>
                            <td><%= owner.no_hp %></td>
                            <td><%= owner.email %></td>
                            <td>
                                
                                <a href="/owners/edit/<%= owner._id %>" class="btn btn-warning badge rounded-pill"><i class="bi bi-pencil"></i> Edit</a>
                
                                
                                <form action="/owners/delete/<%= owner._id %>" method="POST" style="display: inline;">
                                    <button type="submit" class="btn btn-danger badge rounded-pill" onclick="return confirm('Are you sure you want to delete this owner?')">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>
