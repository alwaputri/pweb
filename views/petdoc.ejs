<div class="container mt-3">
    <div class="row">
        <div class="col-md-8">
            <h2>Pets</h2>
            <a class="btn btn-primary" href="/add" role="button">Tambah Data</a>
            <table class="table">
                <thead>
                  <tr>
                    <th scope="col">No</th>
                    <th scope="col">Nama</th>
                    <th scope="col">Jenis Hewan</th>
                    <th scope="col">Ras</th>
                    <th scope="col">Service</th>
                    <th scope="col">Owner</th>
                    <th scope="col">Aksi</th>
                  </tr>
                </thead>
                <tbody>
                    <% data.forEach(function(pet, index) { %>
                        <tr>
                            <th scope="row"><%= index + 1 %></th>
                            <td><%= pet.name %></td>
                            <td><%= pet.jenis_hewan %></td>
                            <td><%= pet.ras %></td>
                            <td><%= pet.service %></td>
                            <td><%= pet.owner && pet.owner.nama ? pet.owner.nama : 'N/A' %></td>

                            <td>
                                <a href="/detail/<%= pet._id %>" class="btn btn-success badge rounded-pill"><i class="bi bi-info-circle"></i> Detail</a>
                                <a href="/form/<%= pet._id %>" class="btn btn-warning badge rounded-pill"><i class="bi bi-pencil"></i> Edit</a>
                                <form action="/delete/<%= pet._id %>" method="POST" style="display: inline;">
                                    <button type="submit" class="btn btn-danger badge rounded-pill" onclick="return confirm('Are you sure you want to delete this pet?')">
                                        <i class="bi bi-trash"></i> Hapus
                                    </button>
                                </form>
                                    
                                

                            </td>
                        </tr>
                    <% }) %>
                </tbody>
              </table>
        </div>
    </div>
</div>